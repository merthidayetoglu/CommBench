# ----- Make Macros -----

CXX = CC
CXXFLAGS = -DPORT_HIP -std=c++14 -fopenmp -I${ROCM_PATH}/include/rccl -D__HIP_ROCclr__ -D__HIP_ARCH_GFX90A__=1 -x hip
OPTFLAGS = -O3 

LD_FLAGS = -fopenmp -L${ROCM_PATH}/lib -lamdhip64 -lrccl ${PE_MPICH_GTL_DIR_amd_gfx90a} ${PE_MPICH_GTL_LIBS_amd_gfx90a}

TARGETS = CommBench
OBJECTS = main.o 

# ----- Make Rules -----

all:	$(TARGETS)

%.o: %.cpp
	${CXX} ${CXXFLAGS} ${OPTFLAGS} $< -c -o $@ -craype-verbose

CommBench: $(OBJECTS)
	$(CXX) -o $@ $(OBJECTS) $(LD_FLAGS)

clean:
	rm -f $(TARGETS) *.o *.o.* *.txt *.bin core *.html *.xml
